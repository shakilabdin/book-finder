<%= form_for @review do |f| %>

    <%= hidden_field_tag 'review[book_id]', @book.id  %>
    <%= f.label :rating, "Book Rating" %><br>
    <%= f.select :rating, [0,1,2,3,4,5].collect {|n| [n, n]} %>
    <hr>
    <%= f.label :content, 'Write Your Review' %>
    <hr>
    <%= f.text_area :content, size: "100x5" %>
    <hr>
    <%= f.submit 'Submit', params: {book_id: @book.id, user_id: session[:user_id]} %>

<% end %>

<hr>

<%= button_to "Cancel", book_path(@book), method: :get %>