<% @books.each do |book| %>
<!-- Projects Section -->
  <section id="projects" class="projects-section bg-light">
    <div class="container">

      <!-- Project One Row -->
      <div class="row justify-content-center no-gutters mb-5 mb-lg-0">
        <div class="col-lg-6">
          <img class="img-fluid" src=<%=book.picture%> alt="">
        </div>
        <div class="col-lg-6">
          <div class="bg-black text-center h-100 project">
            <div class="d-flex h-100">
              <div class="project-text w-100 my-auto text-center text-lg-left">
                <h4 class="text-white"><%=link_to book.title, book_path(book)%></h4>
                <h4 class="text-white"><%=link_to book.author.name, author_path(book.author)%></h4>
                <p class="mb-0 text-white-50"><%= book.summary %></p>
                <hr class="d-none d-lg-block mb-0 ml-0">
              </div>
            </div>
          </div>
        </div>
      </div>


    </div>
  </section>

<% end %>