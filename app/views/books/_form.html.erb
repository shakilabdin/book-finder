<%= form_for @book do |f| %>

    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
    <br>

    <%= fields_for :author do |author_fields| %>
        <%= author_fields.label :name, "Author's Name" %>
        <%= author_fields.text_field :name %>
    <% end %>

    <br>
    <%= f.label :genre_id, "Genre: " %>
    <%= f.select :genre_id, @genre.collect {|g| [g.name, g.id]}, include_blank: true %>
    <br>
    <%= f.label :summary, "Summary of Book" %>
    <%= f.text_area :summary, size: '100x5' %>
    <br>
    <%= f.submit "Submit" %>
    

<% end %>

