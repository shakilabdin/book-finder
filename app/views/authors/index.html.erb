<div style="text-align:center">
    <h1 style="font-size:5em">All Authors</h1>
   <p> <%= button_to "Add Author", new_author_path, method: :get %> </p>
</div>

<% @authors.each do |author| %>
<!-- Projects Section -->
  <section id="projects" class="projects-section bg-light">
    <div class="container">

      <!-- Project One Row -->
      <div class="row justify-content-center no-gutters mb-5 mb-lg-0">
        <div class="col-lg-6">
          <img height="300" width="300" class="img-fluid" src=<%=author.picture%> alt="">
        </div>
        <div class="col-lg-6">
          <div class="bg-black text-center h-100 project">
            <div class="d-flex h-100">
              <div class="project-text w-100 my-auto text-center text-lg-left">
                <h4 class="text-white"><%=link_to author.name, author_path(author)%></h4>
                <p class="mb-0 text-white-50"><%= author.profile %></p>
                <hr class="d-none d-lg-block mb-0 ml-0">
              </div>
            </div>
          </div>
        </div>
      </div>


    </div>
  </section>

<% end %>