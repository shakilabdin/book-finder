<%= form_for @author do |f| %>

    <%= f.label :name, 'Authors Name' %>
    <%= f.text_field :name%>
    <br>
    <%= f.label :profile, 'Authors Profile' %>
    <%= f.text_area :profile, size: "100x5"%>
    <br>
    <%= f.label :picture, 'Authors Picture' %>
    <%= f.text_field :picture%>
    <br>
    <%= f.submit 'Submit' %>

<% end %>

